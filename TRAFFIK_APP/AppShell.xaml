<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TRAFFIK_APP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TRAFFIK_APP.Views"
    Title="TRAFFIK"
    Shell.NavBarHasShadow="False"
    Shell.BackgroundColor="Black"
    Shell.TitleColor="White">

    <Shell.TitleView>
        <AbsoluteLayout BackgroundColor="Black"
                    HeightRequest="56"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">

            <Label Text="TRAFFIK"
               TextColor="White"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1"
               AbsoluteLayout.LayoutFlags="PositionProportional" />
        </AbsoluteLayout>
    </Shell.TitleView>
    
    <Shell.FlyoutBehavior>Disabled</Shell.FlyoutBehavior>

    <!-- Login route (hidden tab bar) -->
    <ShellContent Title="Login"
                  ContentTemplate="{DataTemplate views:LoginPage}"
                  Route="LoginPage"
                  Shell.TabBarIsVisible="False"
                  Shell.NavBarIsVisible="False" />

    <!-- Main tabbed navigation (regular user) -->
    <TabBar Route="UserDashboardPage">
        <ShellContent Title="Dashboard"
                      Icon="home_icon.png"
                      ContentTemplate="{DataTemplate views:DashboardPage}"
                      Route="DashboardPage" />

        <ShellContent Title="Booking"
                      Icon="calendar_icon.png"
                      ContentTemplate="{DataTemplate views:BookingPage}"
                      Route="BookingPage" />

        <ShellContent Title="Rewards"
                      Icon="gift_icon.png"
                      ContentTemplate="{DataTemplate views:RewardsPage}"
                      Route="RewardsPage" />

        <ShellContent Title="Account"
                      Icon="account_icon.png"
                      ContentTemplate="{DataTemplate views:AccountPage}"
                      Route="AccountPage" />
    </TabBar>

    <!-- Staff dashboard route (no tab bar) -->
    <ShellContent Title="Staff"
                  ContentTemplate="{DataTemplate views:StaffDashboardPage}"
                  Route="StaffDashboardPage"
                  Shell.TabBarIsVisible="False" />

    <!-- Admin routes -->
    <ShellContent Title="Admin"
                  ContentTemplate="{DataTemplate views:AdminDashboardPage}"
                  Route="AdminDashboardPage"
                  Shell.TabBarIsVisible="False"
                  Shell.NavBarIsVisible="False" />

    <ShellContent Title="AdminAnalytics"
                  ContentTemplate="{DataTemplate views:AdminAnalyticsPage}"
                  Route="AdminAnalyticsPage"
                  Shell.TabBarIsVisible="False"
                  Shell.NavBarIsVisible="False" />

    <ShellContent Title="AddAdmin"
                  ContentTemplate="{DataTemplate views:AddAdminPage}"
                  Route="AddAdminPage"
                  Shell.TabBarIsVisible="False"
                  Shell.NavBarIsVisible="False" />
</Shell>
