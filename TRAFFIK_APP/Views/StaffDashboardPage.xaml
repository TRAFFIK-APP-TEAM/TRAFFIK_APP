<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.StaffDashboardPage"
             x:Name="StaffDashboardRoot"
             BackgroundColor="#000000"
             Shell.FlyoutBehavior="Disabled">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Bar -->
        <Grid Padding="24,16" Row="0" BackgroundColor="#000000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <VerticalStackLayout Spacing="4">
                <Label Text="Staff Dashboard"
                       FontSize="26"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="Manage Active Bookings"
                       FontSize="14"
                       TextColor="#9CA3AF"
                       Opacity="0.7" />
            </VerticalStackLayout>
            <Button Text="Profile"
                    Grid.Column="1"
                    Command="{Binding EditProfileCommand}"
                    BackgroundColor="#2563EB"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="20,8" />
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="16">
                <!-- Header Section -->
                <Grid ColumnDefinitions="*,Auto">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Active Bookings"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="Update booking status in real-time"
                               FontSize="13"
                               TextColor="#9CA3AF"
                               Margin="0,-5,0,0" />
                    </VerticalStackLayout>
                    <Button Text="View All"
                            Grid.Column="1"
                            Command="{Binding ViewAllBookingsCommand}"
                            BackgroundColor="#1E293B"
                            TextColor="White"
                            CornerRadius="8"
                            Padding="16,8"
                            BorderWidth="1"
                            BorderColor="#334155" />
                </Grid>

                <!-- Quick Stats -->
                <Border BackgroundColor="#1E1E1E"
                        Stroke="Gray"
                        StrokeThickness="1"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Active Bookings"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White" />
                        <Label Text="{Binding ActiveBookingsCount, StringFormat='{0} bookings in progress'}"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#007AFF"
                               HorizontalOptions="Center"
                               Padding="0,10,0,0" />
                    </VerticalStackLayout>
                </Border>

                <!-- Quick Actions -->
                <Border BackgroundColor="#1E1E1E"
                        Stroke="Gray"
                        StrokeThickness="1"
                        Padding="20">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="16">
                        <Label Text="Quick Actions"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="White" />

                        <Button Text="View &amp; Manage Bookings"
                                Command="{Binding ViewAllBookingsCommand}"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                CornerRadius="8"
                                Padding="0,15"
                                FontAttributes="Bold"
                                FontSize="16" />

                        <Button Text="View Active Codes"
                                Command="{Binding ViewCodesCommand}"
                                BackgroundColor="#2563EB"
                                TextColor="White"
                                CornerRadius="8"
                                Padding="0,15"
                                FontAttributes="Bold"
                                FontSize="16" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
