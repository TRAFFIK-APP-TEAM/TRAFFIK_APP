<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.BookingConfirmationPage"
             x:DataType="viewmodels:BookingConfirmationViewModel"
             BackgroundColor="#0D0D0D"
             Title="Booking Confirmation">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Header -->
            <Label Text="Confirm Your Booking"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White"
                   Margin="0,10,0,20"/>

            <!-- Service Details -->
            <Border BackgroundColor="#1E1E1E"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Service" TextColor="#A0A0A0" FontSize="14"/>
                    <Label Text="{Binding SelectedServiceName}" TextColor="White" FontSize="18"/>
                    <Label Text="{Binding SelectedServiceDescription}" TextColor="#CCCCCC" FontSize="13"/>
                    <Label Text="{Binding SelectedServicePrice, StringFormat='Price: {0}'}" 
                           TextColor="#FF0000" FontSize="14" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Border>

            <!-- Vehicle Details -->
            <Border BackgroundColor="#1E1E1E"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Vehicle" TextColor="#A0A0A0" FontSize="14"/>
                    <Label Text="{Binding SelectedVehicleName}" TextColor="White" FontSize="18"/>
                    <Label Text="{Binding SelectedVehicleType}" TextColor="#CCCCCC" FontSize="14"/>
                    <Label Text="{Binding SelectedVehicleLicensePlate, StringFormat='Plate: {0}'}" 
                           TextColor="#CCCCCC" FontSize="13"/>
                </VerticalStackLayout>
            </Border>

            <!-- Appointment Details -->
            <Border BackgroundColor="#1E1E1E"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Appointment Details" TextColor="#A0A0A0" FontSize="14"/>
                    <Label Text="{Binding SelectedDate, StringFormat='Date: {0:dddd, dd MMM yyyy}'}" 
                           TextColor="White" FontSize="16"/>
                    <Label Text="{Binding SelectedTime, StringFormat='Time: {0:hh\\:mm}'}"
                           TextColor="White" FontSize="16"/>
                </VerticalStackLayout>
            </Border>

            <!-- Total Summary -->
            <Border BackgroundColor="#1E1E1E"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Total:" TextColor="#A0A0A0" FontSize="18" Grid.Column="0"/>
                    <Label Text="{Binding SelectedServicePrice}"
                           TextColor="#FF0000" FontSize="18" FontAttributes="Bold" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Buttons -->
            <Button Text="Confirm Booking"
                    Command="{Binding ConfirmBookingCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"/>

            <Button Text="Back"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="#333333"
                    TextColor="White"
                    HeightRequest="45"
                    CornerRadius="10"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
