<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.StaffBookingListPage"
             x:DataType="viewmodels:StaffBookingListViewModel"
             BackgroundColor="#0D0D0D"
             Title="All Bookings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label Text="All Bookings"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />
            <CollectionView ItemsSource="{Binding AllBokkings}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#1E1E1E"
                               BorderColor="Gray"
                               CornerRadius="12"
                               Padding="20"
                               Margin="0,5">
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding BookingId, StringFormat=Empty'Booking ID: {0}'}"
                                       TextColor="white" />
                                <Label Text="{Binding VehicleId, StringFormat='Vehicle: {0}'}"
                                       TextColor="White" />
                                <Label Text="{Binding ServiceName, StringFormat='Service: {0}'}"
                                       TextColor="White" />
                                <Label Text="{Binding CurrentStage, StringFormat='Stage: {0}'}"
                                       TextColor="White" />
                                <Label Text="{Binding ScheduledDate, StringFormat='Scheduled: {0:dd MMM yyyy}'}"
                                       TextColor="White" />

                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

