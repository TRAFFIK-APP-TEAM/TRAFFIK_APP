<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.AdminManageBookingsPage"
             Title="Manage Bookings"
             BackgroundColor="#101726">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Manage Bookings"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"/>

            <Label Text="Below is a list of all customer bookings. Filter, view details, or update booking status."
                   TextColor="#C8CDD6"
                   FontSize="14"/>

            <!-- Placeholder for future search/filter bar -->
            <Frame BackgroundColor="#262B34" CornerRadius="12" Padding="10">
                <Entry Placeholder="Search bookings..." TextColor="White" PlaceholderColor="#C8CDD6"/>
            </Frame>

            <!-- Bookings List -->
            <CollectionView x:Name="BookingsList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#262B34" CornerRadius="12" HasShadow="True" Padding="16" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding CustomerName}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding ServiceName}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding BookingDate}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding Status}" TextColor="#C8CDD6" FontSize="13"/>
                                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                                    <Button Text="View" CornerRadius="8" WidthRequest="80"/>
                                    <Button Text="Mark Complete" CornerRadius="8" WidthRequest="120"/>
                                    <Button Text="Cancel" CornerRadius="8" WidthRequest="80" BackgroundColor="#8B0000" TextColor="White"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
