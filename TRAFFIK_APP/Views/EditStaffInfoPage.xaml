<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.EditStaffInfoPage"
             x:DataType="viewmodels:EditStaffInfoViewModel"
             BackgroundColor="Black"
             Title="Edit Info">

    <VerticalStackLayout Padding="24" Spacing="20">

        <Label Text="Edit Staff Info"
               FontSize="22"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

        <Entry Placeholder="Cellphone Number"
               Text="{Binding PhoneNumber}"
               Keyboard="Telephone"
               TextColor="White"
               PlaceholderColor="Gray"
               BackgroundColor="#1E1E1E" />

        <Entry Placeholder="New Password"
               Text="{Binding Password}"
               IsPassword="True"
               TextColor="White"
               PlaceholderColor="Gray"
               BackgroundColor="#1E1E1E" />

        <Entry Placeholder="Confirm Password"
               Text="{Binding ConfirmPassword}"
               IsPassword="True"
               TextColor="White"
               PlaceholderColor="Gray"
               BackgroundColor="#1E1E1E" />

        <Button Text="Save Changes"
                Command="{Binding SaveCommand}"
                BackgroundColor="#007AFF"
                TextColor="White"
                CornerRadius="8" />

        <Label Text="{Binding ErrorMessage}"
               TextColor="Red"
               FontSize="14"
               IsVisible="{Binding HasError}" />

    </VerticalStackLayout>
</ContentPage>