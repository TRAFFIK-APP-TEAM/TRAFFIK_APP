<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.VehicleCard"
             x:DataType="viewmodels:VehicleCardViewModel"
             BackgroundColor="Transparent"
             Padding="10">

    <Border BackgroundColor="#1E1E1E"
            StrokeThickness="0"
            StrokeShape="RoundRectangle 12"
            Padding="15"
            Margin="5">

        <VerticalStackLayout Spacing="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <Image Source="{Binding imageUrl}"
                   Aspect="AspectFill"
                   HeightRequest="100"
                   WidthRequest="150"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Clip="RectangleGeometry Rect='0,0,150,100'"/>

            <Label Text="{Binding licensePlate}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </VerticalStackLayout>
    </Border>
</ContentView>