<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:entities="clr-namespace:TRAFFIK_APP.Models.Entities.Vehicle"
             x:Class="TRAFFIK_APP.Views.Components.VehicleCard"
             x:DataType="entities:Vehicle"
             BackgroundColor="Transparent"
             Padding="5">

    <Border BackgroundColor="#1E1E1E"
            StrokeThickness="1"
            Stroke="Gray"
            StrokeShape="RoundRectangle 12"
            Padding="8"
            Margin="2"
            WidthRequest="160"
            HeightRequest="160"
            VerticalOptions="Center">

        <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
            
            <!-- Vehicle Image -->
            <Border Grid.Row="0"
                    BackgroundColor="#2E2E2E"
                    StrokeShape="RoundRectangle 8"
                    Padding="4"
                    HeightRequest="100"
                    WidthRequest="140">
                <Image Source="{Binding ImageUrl}"
                       Aspect="AspectFill"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>

            <!-- License Plate -->
            <Label Grid.Row="1"
                   Text="{Binding LicensePlate}"
                   FontSize="14"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
            
            <!-- Make and Model -->
            <Label Grid.Row="2"
                   Text="{Binding Make}"
                   FontSize="11"
                   TextColor="#C8C8C8"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>
    </Border>
</ContentView>