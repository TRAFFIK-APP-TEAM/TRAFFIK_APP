<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             xmlns:dtos="clr-namespace:TRAFFIK_APP.Models.Dtos.Booking"
             x:Class="TRAFFIK_APP.Views.BookingHistoryPage"
             x:DataType="viewmodels:BookingViewModel"
             BackgroundColor="#0D0D0D"
             Title="Booking History">

    <Grid RowDefinitions="Auto,*">

        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20" Margin="0,20,0,20">
            <Label Text="Booking History"
                   TextColor="#C8C8C8"
                   FontSize="16"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- Content -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="20">
                
                <!-- Empty State -->
                <Border BackgroundColor="#1E1E1E"
                        StrokeThickness="0"
                        Padding="25"
                        StrokeShape="RoundRectangle 15"
                        IsVisible="{Binding NoClosedBookings}">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="Booking History"
                               TextColor="White"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <Label Text="No closed bookings yet"
                               TextColor="#888"
                               FontSize="14"
                               HorizontalOptions="Center"
                               Margin="0,20,0,0"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Closed Bookings List -->
                <VerticalStackLayout Spacing="15" IsVisible="{Binding HasClosedBookings}">
                    <Label Text="Closed Bookings"
                           TextColor="#C8C8C8"
                           FontSize="16"
                           FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding ClosedBookings}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="dtos:BookingDto">
                                <Border BackgroundColor="#1E1E1E"
                                        StrokeThickness="1"
                                        Stroke="Gray"
                                        Padding="20"
                                        Margin="0,0,0,15"
                                        StrokeShape="RoundRectangle 15">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BookingViewModel}}, Path=ViewBookingDetailsCommand}" 
                                                              CommandParameter="{Binding Id}"/>
                                    </Border.GestureRecognizers>
                                    <VerticalStackLayout Spacing="12">
                                        <!-- Status Badge - Top Right -->
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"/>
                                            <Border Grid.Column="1"
                                                    HorizontalOptions="End"
                                                    BackgroundColor="#2E2E2E"
                                                    Padding="10,5"
                                                    StrokeShape="RoundRectangle 10">
                                                <Label Text="{Binding Status, TargetNullValue='Pending'}"
                                                       FontSize="12"
                                                       FontAttributes="Bold"
                                                       TextColor="#C8C8C8"/>
                                            </Border>
                                        </Grid>

                                        <!-- Vehicle License Plate -->
                                        <Label Text="{Binding VehicleLicensePlate, FallbackValue='No Plate', StringFormat='{0}'}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="#007AFF"/>

                                        <!-- Service Name -->
                                        <Label Text="{Binding ServiceName, FallbackValue='Service Name', StringFormat='Service: {0}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               Margin="0,-5,0,0"/>

                                        <!-- Date and Time -->
                                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                                            <Label Grid.Column="0"
                                                   Text="{Binding BookingDate, StringFormat='ðŸ“… {0:dd MMM yyyy}'}"
                                                   FontSize="14"
                                                   TextColor="#C8C8C8"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding BookingTime, StringFormat='â° {0:hh\\:mm}'}"
                                                   FontSize="14"
                                                   TextColor="#C8C8C8"/>
                                        </Grid>

                                        <!-- Vehicle Info (if available) -->
                                        <Label Text="{Binding VehicleDisplayName, StringFormat='Vehicle: {0}'}"
                                               FontSize="13"
                                               TextColor="#888"
                                               IsVisible="{Binding VehicleDisplayName, Converter={StaticResource StringToBoolConverter}}"/>
                                    </VerticalStackLayout>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>

