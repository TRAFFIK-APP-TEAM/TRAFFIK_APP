<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.AdminManageUsersPage"
             Title="Manage Users"
             BackgroundColor="#101726">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Manage Users"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"/>

            <Label Text="View, edit, or remove user accounts. All customers, employees, and admins are shown."
                   TextColor="#C8CDD6"
                   FontSize="14"/>

            <!-- Placeholder for search/filter -->
            <Frame BackgroundColor="#262B34" CornerRadius="12" Padding="10">
                <Entry Placeholder="Search users..." TextColor="White" PlaceholderColor="#C8CDD6"/>
            </Frame>

            <!-- Section Header: Admins -->
            <Label Text="Administrators and Employees"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <CollectionView x:Name="AdminList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#262B34" CornerRadius="12" HasShadow="True" Padding="16" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding FullName}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Email}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="Role: Admin / Employee" TextColor="#C8CDD6" FontSize="13"/>
                                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                                    <Button Text="View" CornerRadius="8" WidthRequest="80"/>
                                    <Button Text="Deactivate" CornerRadius="8" WidthRequest="120" BackgroundColor="#8B0000" TextColor="White"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Section Header: Customers -->
            <Label Text="Customers"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,0"/>

            <CollectionView x:Name="CustomerList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#262B34" CornerRadius="12" HasShadow="True" Padding="16" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding FullName}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Email}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="Role: Customer" TextColor="#C8CDD6" FontSize="13"/>
                                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                                    <Button Text="View" CornerRadius="8" WidthRequest="80"/>
                                    <Button Text="Suspend" CornerRadius="8" WidthRequest="100" BackgroundColor="#8B0000" TextColor="White"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
