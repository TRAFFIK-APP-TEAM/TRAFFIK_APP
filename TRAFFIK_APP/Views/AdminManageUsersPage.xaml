<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TRAFFIK_APP.ViewModels"
             xmlns:models="clr-namespace:TRAFFIK_APP.Models.Entities"
             x:Class="TRAFFIK_APP.Views.AdminManageUsersPage"
             x:DataType="vm:AdminManageUsersViewModel"
             Title="Manage Users"
             BackgroundColor="#000000">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <HorizontalStackLayout>
                <Label Text="Manage Users"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                
                <Button Text="Refresh"
                        CornerRadius="8"
                        WidthRequest="100"
                        Margin="20,0,0,0"
                        Command="{Binding LoadUsersCommand}"
                        VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Label Text="View, edit, or remove user accounts. All customers, employees, and admins are shown."
                   TextColor="#C8CDD6"
                   FontSize="14"/>
            
            <!-- Debug info -->
            <Label Text="{Binding AdminUsers.Count, StringFormat='Admin Users: {0}'}"
                   TextColor="red"
                   FontSize="12"/>
            <Label Text="{Binding CustomerUsers.Count, StringFormat='Customer Users: {0}'}"
                   TextColor="red"
                   FontSize="12"/>

            <!-- Search/filter -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="12" Padding="10">
                <Entry Placeholder="Search users..." 
                       Text="{Binding SearchText}" 
                       TextColor="White" 
                       PlaceholderColor="#C8CDD6"/>
            </Frame>

            <!-- Section Header: Admins -->
            <Label Text="Administrators and Employees"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,0"/>

            <!-- Loading indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}" 
                               IsVisible="{Binding IsBusy}"
                               Color="White"
                               Margin="0,20"/>

            <!-- Empty state for admins -->
            <Label Text="No administrators or employees found."
                   TextColor="#C8CDD6"
                   FontSize="14"
                   IsVisible="{Binding AdminUsers.Count, Converter={StaticResource CountToBoolConverter}}"
                   HorizontalOptions="Center"
                   Margin="0,20"/>

            <CollectionView ItemsSource="{Binding AdminUsers}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:User">
                        <Frame BackgroundColor="#1E1E1E" CornerRadius="12" HasShadow="True" Padding="16" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding FullName, FallbackValue='Loading...'}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Email, FallbackValue='Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding RoleId, StringFormat='Role ID: {0}', FallbackValue='Role ID: Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding IsActive, StringFormat='Active: {0}', FallbackValue='Active: Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding CreatedAt, StringFormat='Joined: {0:MMM dd, yyyy}', FallbackValue='Joined: Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                                    <Button Text="View" 
                                            CornerRadius="8" 
                                            WidthRequest="80"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminManageUsersViewModel}}, Path=ViewUserCommand}"
                                            CommandParameter="{Binding .}"/>
                                    <Button Text="Deactivate" 
                                            CornerRadius="8" 
                                            WidthRequest="120" 
                                            BackgroundColor="#8B0000" 
                                            TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminManageUsersViewModel}}, Path=DeactivateUserCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Section Header: Customers -->
            <Label Text="Customers"
                   TextColor="White"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,20,0,0"/>

            <!-- Empty state for customers -->
            <Label Text="No customers found."
                   TextColor="#C8CDD6"
                   FontSize="14"
                   IsVisible="{Binding CustomerUsers.Count, Converter={StaticResource CountToBoolConverter}}"
                   HorizontalOptions="Center"
                   Margin="0,20"/>

            <CollectionView ItemsSource="{Binding CustomerUsers}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:User">
                        <Frame BackgroundColor="#1E1E1E" CornerRadius="12" HasShadow="True" Padding="16" Margin="0,8">
                            <VerticalStackLayout>
                                <Label Text="{Binding FullName, FallbackValue='Loading...'}" TextColor="White" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Email, FallbackValue='Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="Role: Customer" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding IsActive, StringFormat='Active: {0}', FallbackValue='Active: Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <Label Text="{Binding CreatedAt, StringFormat='Joined: {0:MMM dd, yyyy}', FallbackValue='Joined: Loading...'}" TextColor="#C8CDD6" FontSize="13"/>
                                <HorizontalStackLayout Spacing="8" Margin="0,10,0,0">
                                    <Button Text="View" 
                                            CornerRadius="8" 
                                            WidthRequest="80"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminManageUsersViewModel}}, Path=ViewUserCommand}"
                                            CommandParameter="{Binding .}"/>
                                    <Button Text="Suspend" 
                                            CornerRadius="8" 
                                            WidthRequest="100" 
                                            BackgroundColor="#DC3545" 
                                            TextColor="White"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminManageUsersViewModel}}, Path=SuspendUserCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
