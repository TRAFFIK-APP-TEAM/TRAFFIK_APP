<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.LoginPage"
             BackgroundColor="#000000"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">
            <!-- Logo -->
            <Border BackgroundColor="#1C1C1E"
                    StrokeShape="RoundRectangle 12"
                    Padding="12"
                    HorizontalOptions="Center">
                <Label Text="TRAFFIK"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
            </Border>

            <!-- Heading -->
            <Label Text="Login"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Form Fields -->
            <VerticalStackLayout Spacing="12">
                <Label Text="EMAIL" TextColor="White" FontSize="14" />
                <Border BackgroundColor="#1C1C1E" StrokeShape="RoundRectangle 12" Padding="8">
                    <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           PlaceholderColor="#8E8E93"
                           FontSize="16" />
                </Border>

                <Label Text="PASSWORD" TextColor="White" FontSize="14" />
                <Border BackgroundColor="#1C1C1E" StrokeShape="RoundRectangle 12" Padding="8">
                    <Grid>
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Password"
                               Text="{Binding Password}"
                               IsPassword="{Binding IsPasswordHidden}"
                               BackgroundColor="Transparent"
                               TextColor="White"
                               PlaceholderColor="#8E8E93"
                               FontSize="16" />
                        <ImageButton Source="eye_icon.png"
                                     BackgroundColor="Transparent"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Clicked="TogglePasswordVisibility" />
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="{Binding HasError}" />

            <!-- Login Button -->
            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="8"
                    HeightRequest="48" />

            <!-- Signup Link -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Don't have an account?" TextColor="White" FontSize="14" />
                <Label Text=" Sign up"
                       TextColor="Red"
                       FontSize="14"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSignupTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>