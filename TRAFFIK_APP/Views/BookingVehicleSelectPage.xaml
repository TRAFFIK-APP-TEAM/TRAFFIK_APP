<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             xmlns:models="clr-namespace:TRAFFIK_APP.Models.Dtos.Vehicle"
             x:Class="TRAFFIK_APP.Views.BookingVehicleSelectPage"
             x:DataType="viewmodels:BookingVehicleSelectViewModel"
             BackgroundColor="#0D0D0D"
             Shell.TabBarIsVisible="False"
             Title="Select Vehicle">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Header -->
        <StackLayout Grid.Row="0" Margin="0,20,0,20">
            <Label Text="TRAFFIK"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="22"/>
            <Label Text="Choose Your Vehicle"
                   TextColor="#C8C8C8"
                   FontSize="16"
                   Margin="0,10,0,0"/>
        </StackLayout>

        <!-- Content -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadVehiclesCommand}">
            <ScrollView>
                <VerticalStackLayout Spacing="15">
                    
                    <!-- No vehicles message -->
                    <Border BackgroundColor="#1E1E1E" 
                            StrokeThickness="0" 
                            Padding="25" 
                            StrokeShape="RoundRectangle 15"
                            IsVisible="{Binding HasNoVehicles}">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="No Vehicles Added"
                                   TextColor="White"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            
                            <Label Text="You need to add a vehicle before making a booking."
                                   TextColor="#888"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                            
                            <Button Text="Add Vehicle"
                                    Command="{Binding AddVehicleCommand}"
                                    BackgroundColor="#007AFF"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Margin="0,10,0,0"
                                    HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Vehicle list -->
                    <CollectionView ItemsSource="{Binding Vehicles}"
                                    BackgroundColor="Transparent"
                                    SelectionMode="None"
                                    IsVisible="{Binding HasVehicles}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:VehicleDto">
                            <Border BackgroundColor="#1E1E1E" 
                                    Margin="0,5" 
                                    Padding="20" 
                                    StrokeThickness="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>
                                
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                                    <!-- Vehicle Icon -->
                                    <Label Grid.Row="0" Grid.Column="0" 
                                           Text="ðŸš™" 
                                           FontSize="24" 
                                           VerticalOptions="Center" 
                                           Margin="0,0,15,0"/>
                                    
                                    <!-- Vehicle Details -->
                                    <StackLayout Grid.Row="0" Grid.Column="1">
                                        <Label Text="{Binding DisplayName}"
                                               TextColor="White"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding VehicleType}"
                                               TextColor="#007AFF"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               Margin="0,2,0,0"/>
                                    </StackLayout>
                                    
                                    <!-- Select Button -->
                                    <Button Grid.Row="0" Grid.Column="2"
                                            Text="Select"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BookingVehicleSelectViewModel}}, Path=SelectVehicleCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#007AFF"
                                            TextColor="White"
                                            CornerRadius="8"
                                            FontSize="14"
                                            Padding="15,8"/>
                                    
                                    <!-- Additional Info -->
                                    <StackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                                                 Orientation="Horizontal" 
                                                 Margin="0,8,0,0">
                                        <Label Text="{Binding Color}"
                                               TextColor="#C8C8C8"
                                               FontSize="12"/>
                                        <Label Text="{Binding Year, StringFormat=' â€¢ {0}'}"
                                               TextColor="#C8C8C8"
                                               FontSize="12"/>
                                    </StackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    
                    <CollectionView.EmptyView>
                        <StackLayout Padding="40" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="No vehicles found"
                                   TextColor="#888"
                                   FontSize="16"
                                   HorizontalOptions="Center"/>
                            <Label Text="Pull down to refresh"
                                   TextColor="#666"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   Margin="0,10,0,0"/>
                        </StackLayout>
                    </CollectionView.EmptyView>
                    </CollectionView>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Bottom Navigation Bar (same as BookingPage) -->
        <Grid Grid.Row="2"
              BackgroundColor="#1E1E1E"
              HeightRequest="70"
              Padding="10,0"
              ColumnSpacing="25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                <ImageButton Source="home.png"
                             BackgroundColor="Transparent"
                             HeightRequest="28" WidthRequest="28"/>
                <Label Text="Home" FontSize="12" TextColor="White" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                <ImageButton Source="appointment.png"
                             BackgroundColor="Transparent"
                             HeightRequest="28" WidthRequest="28"/>
                <Label Text="Appointment" FontSize="12" TextColor="#007AFF" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Column="2" HorizontalOptions="Center">
                <ImageButton Source="rewards.png"
                             BackgroundColor="Transparent"
                             HeightRequest="28" WidthRequest="28"/>
                <Label Text="Rewards" FontSize="12" TextColor="White" HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Grid.Column="3" HorizontalOptions="Center">
                <ImageButton Source="account.png"
                             BackgroundColor="Transparent"
                             HeightRequest="28" WidthRequest="28"/>
                <Label Text="Account" FontSize="12" TextColor="White" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
