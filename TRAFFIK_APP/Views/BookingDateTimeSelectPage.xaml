<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.BookingDateTimeSelectPage"
             x:DataType="viewmodels:BookingDateTimeSelectViewModel"
             BackgroundColor="#0D0D0D"
             Title="Select Date and Time">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Margin="0,20,0,20">
            <Label Text="Select Appointment Date and Time"
                   TextColor="White"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- Date and Time Pickers -->
        <VerticalStackLayout Grid.Row="1" Spacing="25" VerticalOptions="Center">
            <Label Text="Choose Date" TextColor="White" FontSize="16"/>
            <DatePicker Date="{Binding SelectedDate}" 
                        TextColor="White"
                        BackgroundColor="#1E1E1E"
                        MinimumDate="{Binding Today}"
                        FontSize="16" />

            <Label Text="Choose Time" TextColor="White" FontSize="16"/>
            <TimePicker Time="{Binding SelectedTime}"
                        TextColor="White"
                        BackgroundColor="#1E1E1E"
                        FontSize="16"/>
        </VerticalStackLayout>

        <!-- Continue Button -->
        <Button Grid.Row="2"
                Text="Continue"
                Command="{Binding ContinueCommand}"
                BackgroundColor="#007AFF"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20,0,0"/>
    </Grid>
</ContentPage>
