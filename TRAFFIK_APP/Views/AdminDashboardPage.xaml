<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.AdminDashboardPage"
             Title="Admin Dashboard"
             BackgroundColor="#101726">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Administrator Dashboard"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Frame BackgroundColor="#262B34" CornerRadius="16" HasShadow="True" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Quick Overview" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="Active Bookings: 42" TextColor="#C8CDD6"/>
                    <Label Text="Completed Services: 118" TextColor="#C8CDD6"/>
                    <Label Text="Pending Transactions: 6" TextColor="#C8CDD6"/>
                </VerticalStackLayout>
            </Frame>

            <Frame BackgroundColor="#262B34" CornerRadius="16" HasShadow="True" Padding="16">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Admin Tools" TextColor="White" FontSize="18" FontAttributes="Bold"/>
                    <Button Text="View Analytics" CornerRadius="12" Clicked="OnViewAnalytics"/>
                    <Button Text="Manage Bookings" CornerRadius="12" Clicked="OnManageBookings"/>
                    <Button Text="Manage Users" CornerRadius="12" Clicked="OnManageUsers"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
