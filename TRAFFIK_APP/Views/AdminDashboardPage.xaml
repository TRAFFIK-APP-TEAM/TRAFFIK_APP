<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.AdminDashboardPage"
             Title="Admin Dashboard"
             BackgroundColor="#101726">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">

			<!-- Header -->
			<Label Text="Administrator Dashboard"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

			<!-- Overview Card -->
			<Frame BackgroundColor="#262B34"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="16">
				<VerticalStackLayout Spacing="8">
					<Label Text="Quick Overview"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"/>
					<Label Text="Monitor your business operations at a glance."
                           TextColor="#C8CDD6"
                           FontSize="13"/>
				</VerticalStackLayout>
			</Frame>

			<!-- Admin Tools -->
			<Frame BackgroundColor="#262B34"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="16">
				<VerticalStackLayout Spacing="12">

					<Label Text="Admin Tools"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,0,0,8"/>

					<!-- Navigation Buttons -->
					<Button Text="View Analytics"
                            CornerRadius="12"
                            Clicked="OnViewAnalytics"
                            BackgroundColor="#303743"
                            TextColor="White"/>

					<Button Text="Manage Bookings"
                            CornerRadius="12"
                            Clicked="OnManageBookings"
                            BackgroundColor="#303743"
                            TextColor="White"/>

					<Button Text="Manage Users"
                            CornerRadius="12"
                            Clicked="OnManageUsers"
                            BackgroundColor="#303743"
                            TextColor="White"/>

					<Button Text="Add Admin / Employee"
                            CornerRadius="12"
                            Clicked="OnAddAdmin"
                            BackgroundColor="#2E8B57"
                            TextColor="White"/>
				</VerticalStackLayout>
			</Frame>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
