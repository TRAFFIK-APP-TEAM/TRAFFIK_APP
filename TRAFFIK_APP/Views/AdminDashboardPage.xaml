<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TRAFFIK_APP.Views.AdminDashboardPage"
             Title="Admin Dashboard"
             BackgroundColor="#000000">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">

			<!-- Header -->
			<Label Text="Administrator Dashboard"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

			<!-- Admin Tools -->
			<Frame BackgroundColor="#1E1E1E"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="16">
				<VerticalStackLayout Spacing="12">

					<Label Text="Admin Tools"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,0,0,8"/>

					<!-- Navigation Buttons -->
					<!--<Button Text="View Analytics"
                            CornerRadius="12"
                            Clicked="OnViewAnalytics"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>-->

					<Button Text="Manage Bookings"
                            CornerRadius="12"
                            Clicked="OnManageBookings"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>

					<Button Text="Manage Users"
                            CornerRadius="12"
                            Clicked="OnManageUsers"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>

					<Button Text="Add Admin / Employee"
                            CornerRadius="12"
                            Clicked="OnAddAdmin"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>

					<Button Text="View Redeemed Rewards"
                            CornerRadius="12"
                            Clicked="OnViewRedeemedRewards"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>
				</VerticalStackLayout>
			</Frame>

			<!-- Profile Section -->
			<Frame BackgroundColor="#1E1E1E"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="16">
				<VerticalStackLayout Spacing="12">

					<Label Text="Profile"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,0,0,8"/>

					<Button Text="View Profile"
                            CornerRadius="12"
                            Clicked="OnViewProfile"
                            BackgroundColor="#007AFF"
                            TextColor="White"/>

				</VerticalStackLayout>
			</Frame>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
