<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:TRAFFIK_APP.ViewModels"
             x:Class="TRAFFIK_APP.Views.BookingTrackerPage"
             x:DataType="viewmodels:BookingTrackerViewModel"
             BackgroundColor="#0D0D0D"
             Title="My Bookings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Your Bookings"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Empty State -->
            <Label Text="No bookings yet"
                   TextColor="#888"
                   FontSize="14"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsEmpty}" />

            <!-- Booking List -->
            <CollectionView ItemsSource="{Binding Bookings}"
                            IsVisible="{Binding IsNotEmpty}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E" Padding="20" Margin="0,5">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Stroke>
                                <SolidColorBrush Color="Gray"/>
                            </Border.Stroke>
                            <VerticalStackLayout Spacing="10">
                                <Label Text="{Binding ServiceName, StringFormat='Service: {0}'}"
                                       TextColor="White"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding ScheduledDate, StringFormat='Scheduled: {0:dd MMM yyyy}'}"
                                       TextColor="White" />
                                <Label Text="{Binding CurrentStage, StringFormat='Stage: {0}'}"
                                       TextColor="White" />
                                <Label Text="{Binding CompletionDate, StringFormat='Completed: {0:dd MMM yyyy}'}"
                                       TextColor="LightGreen"
                                       IsVisible="{Binding IsCompleted}" />
                                <ProgressBar Progress="{Binding ProgressFraction}"
                                             ProgressColor="#007AFF"
                                             HeightRequest="8" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>