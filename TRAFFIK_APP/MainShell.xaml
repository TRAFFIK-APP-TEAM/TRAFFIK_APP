<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TRAFFIK_APP.MainShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TRAFFIK_APP.Views"
    Title="TRAFFIK">

    <TabBar>
        <ShellContent Title="Dashboard" Icon="home_icon.png" ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />
        <ShellContent Title="Booking" Icon="calendar_icon.png" ContentTemplate="{DataTemplate views:BookingPage}" Route="BookingPage" />
        <ShellContent Title="Rewards" Icon="gift_icon.png" ContentTemplate="{DataTemplate views:RewardsPage}" Route="RewardsPage" />
        <ShellContent Title="Account" Icon="account_icon.png" ContentTemplate="{DataTemplate views:AccountPage}" Route="AccountPage" />
    </TabBar>
</Shell>

